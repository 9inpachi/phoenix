{
  "version": "1.0.2",
  "packages": [
    "packages/*",
    "packages/phoenix-ng/projects/*"
  ],
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md",
        "*.txt",
        "*.obj"
      ],
      "message": "release(): %s",
      "conventionalCommits": true,
      "changelogPreset": "angular"
    },
    "run": {
      "parallel": true
    },
    "bootstrap": {
      "ignore": "phoenix-ui-components"
    }
  }
}
