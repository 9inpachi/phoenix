{
  "version": "1.0.2-alpha.2",
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md",
        "*.txt",
        "*.obj"
      ],
      "message": "Release %s",
      "conventionalCommits": true,
      "changelogPreset": "git-raw-commits"
    },
    "run": {
      "parallel": true
    }
  }
}
