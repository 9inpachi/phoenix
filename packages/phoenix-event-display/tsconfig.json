{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "src",
    "declaration": true,
    "target": "es5",
    "outDir": "dist",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}